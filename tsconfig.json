{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "inlineSourceMap": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "baseUrl": ".",
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "./@types/**/*"],
  "exclude": ["**/node_modules/**", "**/dist/**", "**/*.spec.ts"]
}
