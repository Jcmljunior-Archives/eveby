{
  "compilerOptions": {
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
    "paths": {
      "@core/*": [ "./src/core/*" ]
    },
    "target": "ES2017",
    "module": "CommonJS",
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "inlineSourceMap": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "skipLibCheck": true,
  },
  "include": [
    "./src/**/*",
    "./@types/**/*"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/*.spec.ts"
  ]
}
